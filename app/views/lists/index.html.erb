<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80);">
  <div class="container">
    <h1>Save any kind of movie</h1>
    <p>Classic</p>    
  </div>
</div>
<div class = "container">
    <div class = "d-flex justify-content-between mt-1">
        <h1> My Movies List <h1>
        <h5> <%= link_to "Add new List", new_list_path, class: "btn btn-success"%> </h5>
    </div>
    <div class = "d-flex flex-wrap justify-content-between">
        <% @lists.each do |list|%>
            <div class="co-12 colsm-6 col-md-4">
              <%= link_to list_path(list), class:'text-decoration-none' do %>
                <div class="card bg-dark text-white mb-4">
                  <img src="https://images.unsplash.com/photo-1568876694728-451bbf694b83?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fG1vdmllc3xlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=60" class="card-img" alt="...">
                  <div class="card-img-overlay">
                    <h3 class="card-title"><%= list.name.upcase %></h3>    
                  </div>
                </div>               
              <% end %>
            </div>         
        <%end%>
    </div>
</div>
